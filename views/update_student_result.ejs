<%- include('include/_header') %>

<main id ="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
            <a href="/teacher" class="border-shadow">
                <i class="fas fa-angle-double-left"></i>
                All Students Result
            </a>
           </div>
        </div>
        <div class="form-title text-center">
           <h2 class="text-dark">
            Update Students Result
           </h2>
           <span class="text-light">
            Use the below form to update Students Result
           </span>
        </div>

       <!--update student form-->
             <!--Form handling-->
      <form id="update_student_result" method="POST">
        <div class="new_student">
           <div class="form-group">
               <label for="rollno" class="text-light">Roll No</label>
               <input type="hidden" name="id" value="<%= result._id %>">
               <input type="number" name="rollno" value="<%= result.rollno %>" placeholder="1">
           </div>
           <div class="form-group">
               <label for="name" class="text-light">Name</label>
               <input type="text" name="name" value="<%= result.name %>" placeholder="John">
           </div>
           <div class="form-group">
               <label for="dob" class="text-light">Date of Birth</label>
               <input type="date" name="dob" value="<%= result.dob %>" placeholder="10-20-2020">
           </div>
           <div class="form-group">
               <label for="score" class="text-light">Score</label>
               <input type="number" name="score" value="<%= result.score %>" placeholder="90">
           </div>
           <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
        </div>
       </form>
       
    </div>
</main>

<%- include('include/_footer') %>